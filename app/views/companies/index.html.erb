<h1><%= Company.model_name.human.pluralize %></h1>

<table class="table">
  <tr>
    <th><%= Company.human_attribute_name("name") %></th>
    <th><%= Company.human_attribute_name("cnpj") %></th>
    <th><%= Company.human_attribute_name("phone") %></th>
    <th><%= Company.human_attribute_name("website") %></th>
    <th><%= Company.human_attribute_name("email") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= link_to company.name, company %></td>
    <td><%= company.cnpj %></td>
    <td><%= company.phone %></td>
    <td><%= company.website %></td>
    <td><%= company.email %></td>
    <td><%= link_to t('.employees'), company_employees_path(company), class: 'btn btn-primary' %></td>
    <td><%= link_to t('sigma.buttons.edit'), edit_company_path(company), class: 'btn' %></td>
    <td><%= link_to t('sigma.buttons.destroy'), company, method: :delete,
      data: { confirm: t('sigma.dialogs.are_you_sure') }, class: 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

