<h1>Listing points</h1>

<table>
  <tr>
    <th>Client</th>
    <th>Value</th>
    <th>Points</th>
    <th>Promotion</th>
    <th>Company</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @points.each do |point| %>
  <tr>
    <td><%= point.client %></td>
    <td><%= point.value %></td>
    <td><%= point.points %></td>
    <td><%= point.promotion %></td>
    <td><%= point.company %></td>
    <td><%= link_to 'Show', point %></td>
    <td><%= link_to 'Edit', edit_point_path(point) %></td>
    <td><%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

